{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "es2020"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}