{
  "name": "nextjs-turnstile",
  "version": "1.0.3",
  "description": "Cloudflare Turnstile CAPTCHA integration for Next.js - Simple, stable, and fully typed",
  "main": "dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./client": {
      "import": {
        "types": "./dist/client.d.mts",
        "default": "./dist/client.mjs"
      },
      "require": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.mts",
        "default": "./dist/server.mjs"
      },
      "require": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "publish:package": "npm publish",
    "test": "jest",
    "prepublishOnly": "npm run build && npm run test"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "server-only": "^0.0.1"
  },
  "author": "Davod Mozafari",
  "contributors": [
    {
      "name": "Max Thakur",
      "email": "max@maxthakur.com",
      "url": "https://maxthakur.xyz"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davodm/nextjs-turnstile.git"
  },
  "bugs": {
    "url": "https://github.com/davodm/nextjs-turnstile/issues"
  },
  "homepage": "https://github.com/davodm/nextjs-turnstile",
  "keywords": [
    "nextjs",
    "next.js",
    "cloudflare",
    "turnstile",
    "captcha",
    "react",
    "bot-protection",
    "security"
  ],
  "devDependencies": {
    "@jest/test-sequencer": "^30.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^28.1.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  }
}
