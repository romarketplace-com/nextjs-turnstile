{
  "name": "nextjs-turnstile",
  "version": "0.1.3",
  "description": "Integrate Cloudflare Turnstile CAPTCHA in Next.js applications",
  "main": "dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./verify": "./dist/server/verifyTurnstile.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node node_modules/tsup/dist/cli-default.js src/index.ts --format esm,cjs --dts --clean",
    "publish:package": "npm publish",
    "test": "jest",
    "prepublishOnly": "npm run build && npm run test"
  },
  "peerDependencies": {
    "next": ">=12.0.0",
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "optionalPeerDependencies": {
    "react-dom": ">=16",
    "react": ">=16",
    "next": ">=11"
  },
  "author": "Davod Mozafari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davodm/nextjs-turnstile.git"
  },
  "bugs": {
    "url": "https://github.com/davodm/nextjs-turnstile/issues"
  },
  "homepage": "https://github.com/davodm/nextjs-turnstile",
  "keywords": [
    "nextjs",
    "cloudflare",
    "turnstile",
    "captcha"
  ],
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "jest-environment-jsdom": "^30.0.0",
    "jest-fetch-mock": "^3.0.3",
    "jsdom": "^26.1.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
